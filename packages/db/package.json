{
  "name": "@pkg/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "migrate:generate": "npx sequelize-cli migration:generate --name",
    "migrate:up": "npx sequelize-cli db:migrate --url $POSTGRES_URL",
    "migrate:down": "npx sequelize-cli db:migrate:undo --url $POSTGRES_URL",
    "seed:all": "npx sequelize-cli db:seed:all --url $POSTGRES_URL",
    "seed:undo": "npx sequelize-cli db:seed:undo:all --url $POSTGRES_URL"
  },
  "dependencies": {
    "@pkg/core": "workspace:*",
    "sequelize": "catalog:"
  },
  "devDependencies": {
    "tsx": "catalog:",
    "typescript": "catalog:",
    "@types/node": "catalog:",
    "sequelize-cli": "catalog:"
  }
}
